    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Backend",
            "request": "launch",
            "type": "node",
            "runtimeExecutable": "npm",
            "args": [
                "run",
                "server"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "presentation": {
                "hidden": true,
            }
        },
        {
            "name": "Run Frontend",
            "request": "launch",
            "type": "node",
            "runtimeExecutable": "npm",
            "args": [
                "run",
                "start"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "presentation": {
                "hidden": true,
            }
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "https://localhost:44444",
            "webRoot": "${workspaceFolder}",
            "presentation": {
                "hidden": true,
            }
        }
    ],
    "compounds": [
        {
            "name": "Run Local",
            "configurations": ["Run Backend", "Launch Chrome", "Run Frontend"],
        }
    ]
}